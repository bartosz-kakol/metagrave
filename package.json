{
  "name": "metagrave",
  "version": "1.1.0-nightly",
  "author": {
    "name": "bartekk",
    "email": "bartekk.github@pm.me"
  },
  "homepage": "https://github.com/bartosz-kakol/metagrave",
  "description": "A beautiful cross-platform alternative Facebook Messenger desktop application with support for custom themes and extensions.",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dist-auto": "electron-builder",
    "dist": "electron-builder -mwl --x64 --arm64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "private": true,
  "dependencies": {
    "electron-store": "^11.0.2",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "pl.bartekk.metagrave",
    "productName": "Metagrave",
    "dmg": {
      "title": "${productName} ${version} Installer",
      "background": "build/dmg/background.tiff",
      "iconSize": 128,
      "window": {
        "x": 100,
        "y": 100,
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 100,
          "y": 170,
          "type": "file",
          "path": ""
        },
        {
          "x": 440,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "category": "public.app-category.social-networking",
      "notarize": false,
      "target": [
        "dir",
        "dmg"
      ]
    },
    "linux": {
      "category": "Network;Chat;InstantMessaging;",
      "target": [
        "deb",
        "AppImage"
      ]
    }
  }
}
