{
  "name": "metagrave",
  "version": "1.0.0",
  "author": {
    "name": "bartekk",
    "email": "bartekk.github@pm.me"
  },
  "homepage": "https://github.com/bartosz-kakol/metagrave",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dist-auto": "electron-builder",
    "dist": "electron-builder -mwl --x64 --arm64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "private": true,
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "pl.bartekk.metagrave",
    "productName": "Metagrave",
    "dmg": {
      "title": "${productName} ${version} Installer",
      "background": "build/dmg/background.tiff",
      "iconSize": 128,
      "window": {
        "x": 100,
        "y": 100,
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 180,
          "y": 170,
          "type": "file",
          "path": ""
        },
        {
          "x": 360,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": ["dir", "dmg"],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": ["deb", "AppImage"],
      "icon": "build/icon.png"
    }
  }
}
